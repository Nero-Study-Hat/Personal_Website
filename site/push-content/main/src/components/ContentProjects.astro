---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'Personal-Website',
    description: 'Where my site content, Github Workflows, IaC, etc. goes for my personal website with all its domains.',
    link: {
        url: 'https://github.com/Nero-Study-Hat/Personal_Website/tree/mvp',
    }
}, {
    name: 'Homelab',
    description: 'A place to tinker, experiment, and get some useful FOSS utilities.',
    link: {
        url: 'https://github.com/Nero-Study-Hat/Homelab'
    }
}, {
    name: 'Homelab Tools: Ansible Service Config Generator',
    description: 'An improvement to my Ansible workflow.',
    link: {
        url: 'https://github.com/Nero-Study-Hat/Homelab-Tools'
    }
}, {
    name: 'Module-Character-Controller',
    description: 'A hierarchical and modular state machine built with C# in Godot.',
    link: {
        url: 'https://github.com/Nero-Study-Hat/Modular-Character-Controller'
    }
},
];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">

                <h3 class="text-xl font-semibold text-white mb-2">
                    {project.name}
                </h3>

                <p class="text-gray-400">
                    {project.description}
                </p>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            ">
                            {project.link.buttonLabel || 'Open Project Website'}
                        </a>
                    : null
                }

            </div>

        )}

    </div>

</div>
